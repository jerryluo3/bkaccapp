
page{background:#fff;}
.page_header{background:#00aafa;}
.category{background:#00aafa;width:100%;height:80rpx;position:fixed;z-index:6666;}
.cat_list{width:680rpx;overflow:scroll; white-space: nowrap;}
.cat_item{height:80rpx;line-height:80rpx;font-size:28rpx;display:inline-block;vertical-align:top;width:150rpx;text-align: center;color:#95edff}
.item_in{color:#fff;font-weight: 700;line-height:76rpx;border-bottom:6rpx solid #fff;height:76rpx;}
.cat_more{width:40rpx;height:40rpx;padding:20rpx;}
.cat_more image{width:40rpx;height:40rpx;}
/****店铺列表***/
.shop_list{width:100%;background:#fff;}
.shop_item{padding:20rpx;}
.shop_logo{width:170rpx;height:170rpx;border-radius: 6rpx;border:1rpx solid #eee;margin-right:20rpx;position:relative}
.shop_logo .login_img{width:170rpx;height:170rpx;border-radius: 6rpx;}
.pifa_ico{position:absolute;z-index:10;top:-10rpx;left:0;width:80rpx;height:40rpx;}
.shop_title{font-size:32rpx;font-weight: 700;}
.shop_addr{color:#666;padding:10rpx 0;}
.shop_tags{padding:10rpx 0;}
.shop_tags_item{border:1rpx solid #d9d9d9;color:#ff6408;margin-right:10rpx;padding:0 5rpx;display:inline-block;font-size:20rpx;border-radius:4rpx;}
.shop_mobile{color:#f40;font-size:28rpx;line-height:60rpx;}
.shop_zhuying{background:#f7fbfd;color:#819caa;padding:5rpx 10rpx;border-radius: 6rpx;}
.shop_info_ico{width:30rpx;height:30rpx;padding:15rpx;}
.shop_info_ico image{width:30rpx;height:30rpx;display: block;}
.shop_info_desc{line-height:60rpx;color:#999}
/****全部***/
.isall{width:100%;text-align:center;color:#ccc;margin:20rpx 0;border-bottom:1rpx solid #f1f1f1;height:20rpx;}
.isall text{padding:0 40rpx;background:#fff;position:relative;line-height:40rpx;}
/*****弹出层*******/
.pop_bg{background:rgba(0,0,0,.7);position:fixed;top:0;bottom:0;width:100%;z-index:100;}
.pop_category{background:#fff;position:fixed;top:0;width:100%;z-index:7777;}
.pop_category_title{background:#f6f6f6;padding:0 20rpx;height:80rpx;line-height:80rpx;}
.pop_category_tname{font-size:28rpx;font-weight: 700;color:#333;line-height:80rpx;}
.pop_category_close{width:40rpx;height:40rpx;padding:20rpx;}
.pop_category_close image{width:40rpx;height:40rpx;}
.pop_category_block{width:100%;}
.pop_category_block_left{width:250rpx;text-align: center;background:#fdfdff;}
.pop_big_catlist{width:100%;max-height: 800rpx;overflow: scroll;}
.pop_big_catitem{font-size:30rpx;color:#666;border-left:6rpx solid #fdfdff;padding:30rpx 0;height:60rpx;line-height:60rpx;}
.pop_big_catitem_in{border-left:6rpx solid #00aafa;background:#fff;}
.pop_category_block_right{padding:0 20rpx;}
.pop_sub_catlist{padding:20rpx 0;max-height: 760rpx;overflow: scroll;}
.pop_sub_catitem{height:60rpx;line-height:60rpx;background:#fafafa;display:inline-block;margin:0 20rpx 20rpx;font-size:28rpx;width:180rpx;text-align:center;}
.pop_sub_catitem_in{background:#00aafa;color:#fff;}


<view class="page"><view class="main"><view class="address_list"><block wx:for="{{addressList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="address_item"><view class="weui-flex address_mess"><view class="weui-flex__item"><view class="address_detail">{{item.ua_address}}</view><view class="address_info">{{item.ua_name+"("+item.ua_sex+")  "+item.ua_mobile}}</view></view><block wx:if="{{tfrom=='cart'}}"><view class="choose_btn" data-id="{{item.ua_id}}" data-event-opts="{{[['tap',[['chooseaddress',['$event']]]]]}}" bindtap="__e">选择</view></block></view><view class="weui-flex btn_row"><view class="weui-flex__item" data-id="{{item.ua_id}}" data-isdefault="{{item.ua_isdefault}}" data-event-opts="{{[['tap',[['setdefault',['$event']]]]]}}" bindtap="__e"><view class="{{['default_btn',item.ua_isdefault==1?'isdefault':'']}}">设为默认</view></view><view class="btns"><view class="option_btn edit" data-id="{{item.ua_id}}" data-event-opts="{{[['tap',[['editaddress',['$event']]]]]}}" bindtap="__e">编辑</view><view class="option_btn del" data-id="{{item.ua_id}}" data-event-opts="{{[['tap',[['deladdress',['$event']]]]]}}" bindtap="__e">删除</view></view></view></view></block></view><view data-event-opts="{{[['tap',[['addaddress',['$event']]]]]}}" class="addaddress" bindtap="__e">新增地址</view></view></view>
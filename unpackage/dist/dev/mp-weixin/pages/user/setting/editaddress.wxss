
.row{border-bottom:1rpx solid #eee;background:#fff;padding:20rpx;line-height:60rpx;}
.row_name{font-weight: bold;color:#333;width:160rpx;font-size:32rpx;}
.inputtxt{color:#333;font-size:32rpx;}
.inputaddr{width:500rpx;height:100rpx;line-height:50rpx;}
.sex{width:100%;padding-top:20rpx;border-top:1rpx solid #eee;}
.sex_item{display:inline-block;border:1rpx solid #eee;margin-right:10rpx;padding:0 20rpx;line-height:50rpx;color:#555;border-radius: 6rpx;font-size:32rpx;}
.tags_item{display:inline-block;border:1rpx solid #eee;margin-right:10rpx;width:100rpx;text-align:center;line-height:50rpx;color:#555;border-radius: 6rpx;font-size:32rpx;}
.active{border:1rpx solid #00B26A;color:#00B26A;}
.openmap{position:absolute;top:0;right:0;bottom:0;z-index:10;text-align: right;width:100rpx;}
.openmap image{width:40rpx;height:40rpx;margin:10rpx 0 0 0;}
.form_btn{background:#00aafa;color:#fff;margin:3%;height:100rpx;line-height:100rpx;border-radius:6rpx;text-align:center;font-size:32rpx;font-weight:bold;}

